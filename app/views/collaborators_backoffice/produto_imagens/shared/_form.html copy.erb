// Quando o usuário clicar em um produto, chamar o edit
$(document).on('click', '.list-group-item', function() {
    var productId = $(this).data('cod_produto'); // Obtém o ID do produto

    $.ajax({
        url: `/collaborators_backoffice/produto_imagens/${productId}/edit`, // Rota edit do Rails
        method: 'GET',
        success: function(response) {
            // Substitui o conteúdo do container pelo formulário de edição retornado
