                          <%= form.label :name, class:"" %>
                        </div>
                      </div>
                    </div>
                    <hr class="my-2">
                    <div class="row mb-3">
                      <%= form.file_field :imagens, multiple: true, class: "form-control" %>
                      <div class="d-flex flex-wrap gap-3 mt-3">
                        <% @produto.produto_imagens.each do |imagem| %>
                          <div class="position-relative image-container" style="display: inline-block;">
                            <!-- Imagem -->
                            <%= image_tag(imagem.imagem, 
                                                        class: "d-block w-100 rounded", 
                                                        style: "max-width: 100%; height: 180px; object-fit: contain;", 
                                                        data: { bs_toggle: "modal", bs_target: "#imageModal" }
                                                    ) %>
                            <!-- Bot√£o de tr√™s pontinhos -->
                            <div class="dropdown image-options">
                              <button class="btn btn-light btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                &#8286; <!-- √çcone de tr√™s pontinhos -->
                              </button>
                              <ul class="dropdown-menu">
                                <li>
                                  <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modal_<%= imagem.id %>">
                                    üîç Ampliar
                                  </a>
                                </li>
                                <li>
                                  <%= link_to "üóëÔ∏è Remover", collaborators_backoffice_produto_imagen_path(id: imagem), 
                                                                method: :delete, 
                                                                data: { confirm: "Tem certeza de que deseja remover esta imagem?" },
                                                                class: "dropdown-item text-danger"
                                                            %>
                                </li>
                              </ul>
                            </div>
                          </div>
                          <!-- Modal com Carousel para navegar entre imagens -->
                          <%= render partial: 'collaborators_backoffice/produto_imagens/shared/modal_imagens', locals: { action_message: 'Modal' } %>
                        <% end %>
                      </div>
                    </div>
                    <div class="mt-3 mb-3">
                      <div class="d-grid text-center">
                        <div class="col-md-9 col-sm-9  offset-md-3">
                          <button type="submit" class="btn btn-success btn-block">Salvar</button>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
              <div class="mt-0 mb-3">
                <div class="d-grid">
                  <div class="col-md-9 col-sm-9  offset-md-3">
                    <div id="setTime"></div
                                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
