    // Quando o usu√°rio clicar em um produto, chamar o edit
    $(document).on('click', '.list-group-item', function() {
        var productId = $(this).data('cod_produto'); // Obt√©m o ID do produto

        $.ajax({
            url: `/collaborators_backoffice/produto_imagens/${productId}/edit`, // Rota edit do Rails
            method: 'GET',
            success: function(response) {
