<div id="layoutAuthentication_content">
  <div class="card mb-3">
    <div class="card-header text-center bg-primary text-white">
      <div class="d-flex">
        <h4 class="text-center font-weight-light text-white">
          <%= "#{action_message} Cor" %>
        </h4>
        <%= link_to '', collaborators_backoffice_cores_path, class: 'btn btn-close ms-auto' %>
      </div>
    </div>
    <div class="card-body">
      <% if cor.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% cor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: [:collaborators_backoffice, cor], local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :nmcor, class: 'form-label' %>
          <%= f.text_field :nmcor, class: 'text form-control', maxlength: 100, placeholder: 'Digite o nome da cor', required: true %>
        </div>
        <div class="form-check mb-3">
          <%= f.check_box :ativo, class: 'form-check-input' %>
          <%= f.label :ativo, 'Ativo', class: 'form-check-label' %>
        </div>
        <div class="d-flex justify-content-end">
          <%= f.submit 'Salvar', class: 'btn btn-success me-2' %>
          <%= link_to 'Cancelar', collaborators_backoffice_cores_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
