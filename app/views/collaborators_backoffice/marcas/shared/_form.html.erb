<div id="layoutAuthentication_content">
  <div class="card mb-3">
    <div class="card-header bg-primary">
      <div class="d-flex">
        <h4 class="text-center font-weight-light text-white">
          <%= "#{action_message} Marca" %>
        </h4>
        <%= link_to '', collaborators_backoffice_marcas_path, class: 'btn btn-close ms-auto' %>
      </div>
    </div>
    <div class="card-body">
      <% if marca.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% marca.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: [:collaborators_backoffice, marca], local: true) do |f| %>
        <div class="mb-3">
          <%= f.label :nome, class: 'form-label' %>
          <%= f.text_field :nome, class: 'text form-control', maxlength: 200, placeholder: 'Digite o nome da marca', required: true %>
        </div>
        <div class="d-flex justify-content-end">
          <%= f.submit 'Salvar', class: 'btn btn-success me-2' %>
          <%= link_to 'Cancelar', collaborators_backoffice_marcas_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
