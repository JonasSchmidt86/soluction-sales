<!-- Modal de Cores -->
<div class="modal fade" id="coresModal" tabindex="-1" aria-labelledby="coresModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="coresModalLabel">Selecionar Cor</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="cor_id" class="form-label">Cor:</label>
          <select id="cor_id" class="form-select">
            <option value="">Selecione uma Cor!</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary" id="confirmar-cor">Confirmar</button>
      </div>
    </div>
  </div>
</div>