<div class="card mt-3">
  <div class="card-header bg-primary">
    <h4 class="text-white">Detalhes do Layout</h4>
  </div>
  <div class="card-body">
    <div class="row mb-3">
      <div class="col-md-2 font-weight-bold">Código:</div>
      <div class="col-md-10"><%= @cadinternalframe.cod_frame %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-2 font-weight-bold">Menu:</div>
      <div class="col-md-10"><%= @cadinternalframe.jmenu %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-2 font-weight-bold">Nome Interno:</div>
      <div class="col-md-10"><%= @cadinternalframe.nminternalframe %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-2 font-weight-bold">Título:</div>
      <div class="col-md-10"><%= @cadinternalframe.tituloframe %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-2 font-weight-bold">Tamanho do Menu:</div>
      <div class="col-md-10"><%= @cadinternalframe.tamanhomenu %></div>
    </div>
    <div class="row mb-3">
      <div class="col-md-2 font-weight-bold">URL:</div>
      <% if @cadinternalframe.url.present? %>
        <div class="col-md-10"><%= link_to @cadinternalframe.tituloframe, @cadinternalframe.url, class: "text-primary", target: "_blank", title: @cadinternalframe.url %></div>
      <% else %>
        <div class="col-md-10">Sem URL</div>
      <% end %>
    </div>
    <div class="mt-3">
      <%= link_to "Voltar", collaborators_backoffice_cadinternalframes_path, class:"btn btn-secondary" %>
      <% if current_collaborator.funcionario.super_admin? %>
        <%= link_to "Editar", edit_collaborators_backoffice_cadinternalframe_path(@cadinternalframe), class:"btn btn-warning" %>
        <%= link_to "Excluir", collaborators_backoffice_cadinternalframe_path(@cadinternalframe), method: :delete, class:"btn btn-danger", data: {confirm: "Deseja excluir este layout?"} %>
      <% end %>
    </div>
  </div>
</div>