<div class="card mt-3">
  <div class="card-header bg-primary d-flex justify-content-between align-items-center">
    <%= link_to collaborators_backoffice_cadinternalframes_path, class:"text-white text-decoration-none" do %>
      <h4 class="mb-0">Cadastro de Layouts</h4>
    <% end %>
    <% if current_collaborator.funcionario.super_admin? %>
      <%= link_to new_collaborators_backoffice_cadinternalframe_path, class:"btn btn-light" do %>
        <i class="fa fa-plus"></i> Novo Layout
      <% end %>
    <% end %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table id="datatablesSimple" class="table table-striped table-hover">
        <thead>
          <tr>
            <th style="width: 10%;">Código</th>
            <th style="width: 20%;">Menu</th>
            <th style="width: 20%;">Nome Interno</th>
            <th style="width: 20%;">Título</th>
            <th style="width: 20%;">URL</th>
            <th style="width: 10%;">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @cadinternalframes.each do |layout| %>
            <tr>
              <td><%= layout.cod_frame %></td>
              <td><%= layout.jmenu %></td>
              <td><%= layout.nminternalframe %></td>
              <td><%= layout.tituloframe %></td>
              <td class="text-truncate" style="max-width: 200px;">
                <% if layout.url.present? %>
                  <%= link_to layout.tituloframe, layout.url, class: "text-primary", target: "_blank", title: layout.url %>
                <% else %>
                  <span class="text-muted">Sem URL</span>
                <% end %>
              </td>
              <td>
                <%= link_to collaborators_backoffice_cadinternalframe_path(layout), class:"btn btn-sm btn-info" do %>
                  <i class="fa fa-eye"></i>
                <% end %>
                <% if current_collaborator.funcionario.super_admin? %>
                  <%= link_to edit_collaborators_backoffice_cadinternalframe_path(layout), class:"btn btn-sm btn-warning" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                  <%= link_to collaborators_backoffice_cadinternalframe_path(layout), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "Deseja excluir este layout?"} do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
