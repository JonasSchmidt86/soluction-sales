<div class="card mb-3 mt-3">
  <div class="card-header text-center bg-primary text-white">
    <div class="d-flex">
      <h4 class="text-center text-white">
        <%= "#{action_message} Grupo" %>
      </h4>
      <%= link_to '', collaborators_backoffice_grupos_path, class: 'btn btn-close ms-auto' %>
    </div>
  </div>
  <div class="card-body">
    <% if grupo.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% grupo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with(model: [:collaborators_backoffice, grupo], local: true) do |f| %>
      <div class="mb-3">
        <%= f.label :nome, class: 'form-label' %>
        <%= f.text_field :nome, class: 'text form-control', maxlength: 100, placeholder: 'Digite o nome do grupo', required: true %>
      </div>
      <div class="form-check mb-3">
        <%= f.check_box :ativo, class: 'form-check-input' %>
        <%= f.label :ativo, 'Ativo', class: 'form-check-label' %>
      </div>
      <div class="d-flex justify-content-end">
        <%= f.submit 'Salvar', class: 'btn btn-success me-2' %>
        <%= link_to 'Cancelar', collaborators_backoffice_grupos_path, class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
