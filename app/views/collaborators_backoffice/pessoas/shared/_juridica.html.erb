        </div>
    </div>
    <div class="col-md-6">
        <div class="form-floating">
            <%= form.text_field :complemento, class: "text form-control", placeholder:"Complemento" %>
            <%= form.label :complemento, class:"" %>
        </div>
    </div>
</div>
<div class="row my-2 text-wrap g-2">
   <div class="col-md-6">
        <div class="form-floating">
            <%= form.text_field :endereco, class: "text form-control", placeholder:"Endereço" %>
            <%= form.label :endereço, class:"" %>
        </div>
    </div>
   <div class="col-md-4">
        <div class="form-floating">
            <%= form.text_field :bairro, class: "text form-control", placeholder:"Bairro" %>
            <%= form.label :bairro, class:"" %>
