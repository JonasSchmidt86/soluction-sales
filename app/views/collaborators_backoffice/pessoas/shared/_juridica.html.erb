    </div>
</div>

<hr class="my-2">

<div class="row mt-3 text-wrap g-2">
   <div class="col-md-4">
        <div class="form-floating">
            <%= form.text_field :pessoacontato, class: "text form-control", placeholder:"representante" %>
            <%= form.label :representante, class:"" %>
        </div>
    </div>
   <div class="col-md-2">
        <div class="form-floating">
            <%= form.text_field :telefonecontato, class: "form-control phone_with_ddd", placeholder:"Telefone repres." %>
            <%= form.label :telefone_repres, class:"" %>
        </div>
    </div>
   
</div>

<script>

  var check = document.getElementById("pessoa_registradoscpc");
  check.onclick = function () {
    var label = document.getElementById("label_scpc");
    if (check.checked) {
        label.innerHTML  = "Com Registro";
    } else {
        label.innerHTML  = "Sem Registro";
    }
  };

</script>
