<html>
  <body>
      <div id="layoutAuthentication">
          <div id="layoutAuthentication_content">
              <main>
                  <div class="container">
                      <div class="row justify-content-center">
                          <div class="col-lg-5">
                              <div class="card shadow-lg border-0 rounded-lg mt-5">
                                  <div class="card-header">
                                    <% if resource.needs_password_setup? %>
                                      <h3 class="text-center font-weight-light my-4">Defina sua senha</h3>
                                      <p class="text-center text-muted">Bem-vindo! Defina sua senha para acessar o sistema.</p>
                                    <% else %>
                                      <h3 class="text-center font-weight-light my-4">Esqueceu a sua senha</h3>
                                    <% end %>
                                  </div>
                                  <div class="card-body">
                                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                                          <%= f.hidden_field :reset_password_token %>
                                          <div class="form-floating mb-3">
                                            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control", type:"password" %>
                                            <%= f.label :password, for:"New password" %>
                                            <% if @minimum_password_length %>
                                              <em>(<%= @minimum_password_length %> characters minimum)</em>
                                            <% end %>
                                          </div>
                                          <div class="form-floating mb-3">
                                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", type:"password" %>
                                            <%= f.label :password_confirmation, for:"Confirm new password" %><br />
                                          </div>

                                          <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <% if resource.needs_password_setup? %>
                                              <%= f.submit "Definir senha", class: "btn btn-primary" %>
                                            <% else %>
                                              <%= f.submit "Alterar minha senha!", class: "btn btn-primary" %>
                                            <% end %>
                                          </div>
                                        <% end %>
                                  </div>
                              </div>
                          </div>
                      </div>
                  </div>
              </main>
          </div>
        </div>
    </body>
</html>
