<!DOCTYPE html>
<html>

    <body>
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login Colaborador</h3></div>
                                    <div class="card-body">


                                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                                                              

                                          <div class="form-floating mb-3">
                                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", type:"email" %>                                            
                                            <%= f.label :email, for:"inputEmail" %>
                                          </div>
                                          <div class="form-floating mb-3">
                                            <%= f.password_field :password, class:"form-control", id:"inputPassword", type:"password" %>                                          
                                            <%= f.label :password, class:"" %>
                                          </div>

                                          <div class="d-flex align-items-center justify-content-between mt-4 mb-0">

                                            <%= link_to 'Esqueceu a sua senha?', new_collaborator_password_path, class:"btn btn-primary" %>
                                            <%= f.submit "Log in", class:"btn btn-primary" %>
                                          </div>
                                      <% end %>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
    </body>
</html>
