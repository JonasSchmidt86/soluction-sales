<h2>Produtos</h2>
<div class="produtos">
  <% @produtos.each do |produto| %>
    <div class="produto-card">
      <h3><%= produto.nome %></h3>
      <% if produto.produto_imagens.any? %>
        <%= image_tag produto.produto_imagens.first.imagem.variant(resize_to_limit: [300, 300]) %>
      <% end %>
      <p><%= produto.descricao %></p>
    </div>
  <% end %>
</div>
<h2>Contato via WhatsApp</h2>
<ul>
  <% @whatsapp_contacts.each do |contato| %>
    <li>
      <%= contato.display_name %>:
      <a href="https://wa.me/<%= contato.whatsapp_number %>" target="_blank" rel="noopener noreferrer">
        Enviar mensagem
      </a>
    </li>
  <% end %>
</ul>
<h2>Instagram</h2>
<a href="<%= @instagram_link %>" target="_blank" rel="noopener noreferrer">
  Nosso Instagram
</a>
